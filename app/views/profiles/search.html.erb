<div id="header">
  <div class="container">
    <div class="row">
      <% provide(:title, 'Search') %>
      <% provide(:button_text, 'Search') %>
      <h1>Search for users</h1>
      <br>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_tag(search_path, method: :get) do %>
            <%= text_field_tag :term, params[:term], placeholder: "Type and click search..." %>
              <ul class="actions">
                <%= submit_tag 'Search', name: nil %>
              </ul>
          <% end %>
          <% if @profiles.length > 0 %>
            <% @profiles.each do |profile| %>
              <h2><a href="<%=user_profile_path(profile.user_id, profile.id)%>"><%=profile.first_name%> <%=profile.last_name%></a></h2>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>